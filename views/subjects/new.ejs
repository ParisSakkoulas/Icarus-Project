<% layout("layouts/boilerplate") %>

    <h1 class="text-center mb-3">Προσθήκη Μαθήματος</h1>

    <div class="col-6 offset-3">
        <form action="/subjects" method="POST" novalidate class="validated-form">

            <div class="mb-3">
                <label class="form-label" for="Name">Όνομα</label>
                <input class="form-control" type="text" id="Name" name="Name" required placeholder="Τίτλος μαθήματος">
                <div class="valid-feedback">Σωστό!</div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Description">Περιγραφή</label>
                <textarea class="form-control" type="text" id="Description" name="Description" style="height: 150px;"
                    placeholder="Σύντομη περιγραφή . . ."></textarea>
                <div class="valid-feedback">Σωστό!</div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Prerequisite_Subj">Προαπαιτούμενα
                    μαθήματα</label>
                <input class="form-control" type="text" id="Prerequisite_Subj" name="Prerequisite_Subj"
                    placeholder="π.χ. Μάθημα1,Μάθημα2">
                <div class="valid-feedback">Σωστό!</div>
            </div>


            <div class="mb-3">
                <button class="btn btn-primary">Προσθήκη</button>
                <a class="card-link btn btn-secondary" href="/subjects">Πίσω</a>
            </div>

        </form>

    </div>

    </div>